<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="example.pbuskell.com.teamjerseyproject.CreditActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtvwShowCredits"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/btnMakeNewJersey" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAKE A NEW JERSEY!"
        android:id="@+id/btnMakeNewJersey"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/txtvwShowCredits"
        android:layout_alignEnd="@+id/txtvwShowCredits"
        android:onClick="backToMenu" />
</RelativeLayout>
